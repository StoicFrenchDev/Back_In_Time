{% extends 'layout.html.twig' %}

{% block content %}



<div class="container w-50 p-2 my-5 shadow-lg rounded-2">

    <ul class="bg-danger">
        {% for error in errors %}
        <li>{{ error }}</li>
        {% endfor %}
    </ul>
    
   
    <h1 class=" my-5">Supprimer les photos de l'article :</h1>

        <h2 class="p-2">
            <label for="article" value="{{ article.id }}" class="form-label font-weight-bold">"{{ article.title }}"</label>
        </h2>

        <div class="row " >
            <h3 class="p-2">
                <label for="url" class="form-label font-weight-bold">Photos :</label>
            </h3>
            {% for picture in pictures %}
                <div class=" p-2 col-lg-3 col-md-4 col-6"> 
                    <img src="{{ picture.url }}"  class="form-control" required>
                    <form action="/photo/delete" method="POST">
                        <input type="hidden" name="id" value="{{ picture.id }}">
                        <button>Supprimer</button>
                    </form>
                </div>
            {% endfor %}
        </div>
        <a class="p-3 d-flex justify-content-center" href="/admin/management">Retour</a>
</div>

{% endblock %}

{% block footer %}
<div class="fixed-bottom">
    {% include "component/_footer.html.twig" %}
</div>
{% endblock %}