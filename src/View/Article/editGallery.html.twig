{% extends 'layout.html.twig' %}

{% block content %}

<h2 class="text-center my-5">Ajouter des photos Ã  votre galerie d'article</h2>

<div class="container w-50 p-2 my-5 shadow-lg rounded-2">

    <ul class="bg-danger">
        {% for error in errors %}
        <li>{{ error }}</li>
        {% endfor %}
    </ul>
    
   

        <h1 class="p-2">
            <label for="article" value="{{ article.id }}" class="form-label font-weight-bold">{{ article.title }}</label>
        </h1>

        <div class="row " >
            <label for="url" class="form-label font-weight-bold">Liens photo :</label>
            {% for picture in pictures %}
                <div class=" p-2 col-lg-3 col-md-4 col-6"> 
                    <img src="{{ picture.url }}"  name="url" id="url" class="form-control" required>
                    <form action="/photo/delete" method="POST">
                        <input type="hidden" name="id" value="{{ picture.id }}">
                        <button>Delete</button>
                    </form>
                </div>
            {% endfor %}
        </div>
        
        <p class="p-3 d-flex justify-content-center">
            <input type="button" href="/admin/management" value="Retour page admin" class="form-control">

</div>

{% endblock %}

{% block footer %}
<div class="fixed-bottom">
    {% include "component/_footer.html.twig" %}
</div>
{% endblock %}