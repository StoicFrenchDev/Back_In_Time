{% extends 'layout.html.twig' %}

{% block content %}

<h2 class="text-center my-5">Ajouter des photos à votre galerie d'article</h2>

<div class="container w-50 p-2 my-5 shadow-lg rounded-2">

    <ul class="bg-danger">
        {% for error in errors %}
        <li>{{ error }}</li>
        {% endfor %}
    </ul>




    <form class="form" method="post">
        <input type="hidden" value="{{ article.id }}" name="article_id">

        <h2 class="p-2 text-center" name="article_id" id="article_id" value="{{ article.id }}">Article: "{{
            article.title }}"</h2>

        <p class="p-2">
            <label for="url" class="form-label font-weight-bold">Liens photo :</label>
            <textarea type="url" name="url" id="url" class="form-control" required></textarea>
        </p>

        <p class="p-3 d-flex justify-content-center">
            <input type="submit" value="Ajouter à la galerie photo" class="form-control submit-button">
        </p>
    </form>
    <a class="p-3 d-flex justify-content-center" href="/admin/management">Retour</a>
</div>

{% endblock %}

{% block footer %}
<div class="fixed-bottom">
    {% include "component/_footer.html.twig" %}
</div>
{% endblock %}