{% extends 'layout.html.twig' %}
{% block content %}
<div class="m-4">
    <h1 class="text-center">Bienvenue Admin</h1>
    <h2 class="text-center">Page de gestion du contenu de Back In Time</h2>
</div>
<div class="container">
    <div class="m-5 d-flex justify-content-between">
        <a href="/category/list">
            <button class="btn btn-management">Liste des categorie</button>
        </a>
        <a href="/articles/add">
            <button class="btn btn-management">Créer un article</button>
        </a>
    </div>
</div>
<div class="table-responsive-md mx-2 my-5">
    <table class="table table-striped table-bordered border-dark">
        <thead class="table-dark">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Resumé</th>
                <th scope="col">Categorie</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date</th>
                <th scope="col">Modifier Article</th>
                <th scope="col">Ajouter photos</th>
                <th scope="col">Modifier Galerie</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td><a href="/articles/show?id={{article.id}}">{{ article.title }}</a></td>
                <td>{{ article.extract }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.firstname }}</td>
                <td>{{ article.date|date("d/m/Y") }}</td>
                <td><a href="/articles/edit?id={{article.id}}">
                        <button class="btn btn-management">Modifier</button>
                    </a></td>
                <td><a href="/articles/galerie?id={{article.id}}">
                        <button class="btn btn-management">Ajouter</button>
                    </a></td>
                <td><a href="/gallery/edit?id={{article.id}}">
                        <button class="btn btn-management">Modifier</button>
                    </a></td>
                <td>
                    <form action="/articles/delete" method="POST">
                        <input type="hidden" name="id" value="{{ article.id }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block footer %}
{% include "component/_footer.html.twig" %}
{% endblock %}