{% extends 'layout.html.twig' %}
{% block content %}
<h1>Bienvenu Admin</h1>
<h2>Page de gestion du contenu de Back In Time</h2>
<div class="table-responsive-md m-3">
    <table class="table table-striped table-bordered border-dark">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">Resum√©</th>
                <th scope="col">Categorie</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <th scope="row">{{ article.id }}</th>
                <td><a href="/../articles/show?id={{article.id}}">{{ article.title }}</a></td>
                <td>{{ article.extract }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.date }}</td>
                <td><a href="">modifier</a></td>
                <td><a href="">supprimer</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block footer %}
<div class="fixed-bottom">
    {% include "component/_footer.html.twig" %}
</div>
{% endblock %}