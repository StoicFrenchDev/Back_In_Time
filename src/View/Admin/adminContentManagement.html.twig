{% extends 'layout.html.twig' %}
{% block content %}
<h1 class="text-center">Bienvenue Admin</h1>
<h2 class="text-center">Page de gestion du contenu de Back In Time</h2>
<div class="mx-3">
    <p>Tous nos des articles: <a href="/articles/liste">Par ici</a></p>
    <p>Page Connection Admin <a href="/admin/connection">Par ici</a></p>
    <p>Page rédaction: <a href="/articles/add">Par ici</a></p>
    <p>Page de création de gallerie photo: <a href="/articles/galerie">Par ici</a></p>
    <p>PAGE TEST<a href="/newPage">page test</a></p>
    <p>CRUB<a href="/items">items</a> page.</p>
</div>
<div class="table-responsive-md m-3">
    <table class="table table-striped table-bordered border-dark">
        <thead class="table-dark">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Resumé</th>
                <th scope="col">Categorie</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date</th>
                <th scope="col">Modifier Article</th>
                <th scope="col">Modifier Galerie</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td><a href="/../articles/show?id={{article.id}}">{{ article.title }}</a></td>
                <td>{{ article.extract }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.date }}</td>
                <td><a href="/../articles/edit?id={{article.id}}">Modifier</a></td>
                <td><a href="">Modifier</a></td>
                <td>
                    <form action="/articles/delete" method="POST">
                        <input type="hidden" name="id" value="{{ article.id }}">
                        <button>Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block footer %}
{% include "component/_footer.html.twig" %}
{% endblock %}