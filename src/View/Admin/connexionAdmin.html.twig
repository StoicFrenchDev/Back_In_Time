{% extends 'layout.html.twig' %}
{% block content %}


<h2 class="text-center my-5">Connectez Vous</h2>
<div class="container w-50 p-2 my-5 shadow-lg rounded-2">
    <form class="form " method="post" name="login">
        {% for error in errors %}
        <ul class="pt-1">
            <li> {{ error }} </li>
        </ul>
        {% endfor %}
        <p class="p-2">
            <label for="username" class="form-label font-weight-bold">Nom admin :</label>
            <input type="text" name="username" id="username" class="form-control" required>
        </p>

        <p class="p-2">
            <label for="password" class="form-label font-weight-bold">Mots de passe admin :</label>
            <input type="password" name="password" id="password" class="form-control" required>
        </p>

        <p class="p-5 d-flex justify-content-center">
            <input type="submit" name="connect" value="Se connecter" class="submit-button form-control">
        </p>
    </form>
</div>

{% endblock content %}

{% block footer %}
<div class="fixed-bottom">
    {% include "component/_footer.html.twig" %}
</div>
{% endblock footer %}